<% layout("/layouts/boilerplate") -%>

<style>
  .listings-container {
    padding: 30px 20px;
  }

  .listings-header {
    margin-bottom: 40px;
    text-align: center;
  }

  .listings-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #222222;
    margin-bottom: 10px;
  }

  .listings-header p {
    font-size: 1.1rem;
    color: #666666;
  }

  .listings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .listing-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: none;
  }

  .listing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .listing-card a {
    text-decoration: none;
    color: inherit;
  }

  .listing-card-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }

  .listing-card-body {
    padding: 20px;
  }

  .listing-card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #222222;
    margin-bottom: 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .listing-card-price {
    font-size: 1.3rem;
    font-weight: 800;
    color: #fe424d;
  }

  .listing-card-price-label {
    font-size: 0.85rem;
    color: #999999;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .listings-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 15px;
    }

    .listings-header h1 {
      font-size: 2rem;
    }

    .listing-card-image {
      height: 180px;
    }

    .listing-card-body {
      padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .listings-container {
      padding: 20px 10px;
    }

    .listings-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 12px;
    }

    .listings-header h1 {
      font-size: 1.5rem;
    }

    .listings-header p {
      font-size: 0.95rem;
    }

    .listing-card-image {
      height: 150px;
    }

    .listing-card-body {
      padding: 12px;
    }

    .listing-card-title {
      font-size: 0.95rem;
    }

    .listing-card-price {
      font-size: 1.1rem;
    }
  }

    .search{
        margin-top: 40px;
        text-align: center;
    }

    .search h1{
        font-size: 40px;
        font-weight: 700;
    }

</style>


<div class="search">
    <h1>Search for Parking Spot in the City you Want</h1><br>
    <form action="/listings/searchShow" method="post">
        <input type="text" name="city" style="width: 50%; margin: 10px; height: 50px; border-radius: 20px;" placeholder="Search the City Name"><br><br>
        <button class="btn-primary" style="height: 40px; width: 90px; border-radius: 10%;">Search</button>
    </form>
</div>

<br><br>
<div class="listings-container">
  <div class="listings-header">
    <h1>Available Parking Listings</h1>
    <p>Find and book your perfect parking spot</p>
  </div>

  <div class="listings-grid">
    <% for(let listing of allListings ){ %>
      <div class="card listing-card">
        <a href="/listings/<%=listing._id%>">
          <img src="<%=listing.image.url%>" class="listing-card-image" alt="Listing image">
          <div class="listing-card-body">
            <p class="listing-card-title"><%=listing.title%></p>
            <p class="listing-card-price">
              &#8377 <%=listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %>
              <span class="listing-card-price-label"> / hr</span>
            </p>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>