<% layout("/layouts/boilerplate") -%>

<style>
  .error-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .error-card {
    background: white;
    border-radius: 12px;
    padding: 40px;
    width: 100%;
    max-width: 600px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    border-left: 5px solid #dc3545;
    text-align: center;
  }

  .error-icon {
    font-size: 3rem;
    color: #dc3545;
    margin-bottom: 15px;
  }

  .error-card h2 {
    font-size: 1.8rem;
    font-weight: 800;
    color: #222222;
    margin-bottom: 10px;
  }

  .error-card p {
    color: #666666;
    font-size: 1rem;
    margin-bottom: 25px;
    line-height: 1.6;
  }

  .error-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-buttons a {
    padding: 12px 30px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s;
  }

  .btn-home {
    background: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
    color: white;
  }

  .btn-home:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(254, 66, 77, 0.25);
  }

  .btn-back {
    background: #f0f0f0;
    color: #222222;
  }

  .btn-back:hover {
    background: #e0e0e0;
  }

  @media (max-width: 480px) {
    .error-card {
      padding: 25px;
    }

    .error-icon {
      font-size: 2.5rem;
    }

    .error-card h2 {
      font-size: 1.3rem;
    }

    .error-card p {
      font-size: 0.95rem;
    }

    .error-buttons {
      flex-direction: column;
      gap: 10px;
    }

    .error-buttons a {
      width: 100%;
    }
  }
</style>

<div class="error-container">
  <div class="error-card">
    <div class="error-icon">
      <i class="fas fa-exclamation-circle"></i>
    </div>
    <h2>Oops! Something went wrong</h2>
    <p><%= err.message %></p>
    <div class="error-buttons">
      <a href="/listings" class="btn-home">Go to Home</a>
      <a href="javascript:history.back()" class="btn-back">Go Back</a>
    </div>
  </div>
</div>